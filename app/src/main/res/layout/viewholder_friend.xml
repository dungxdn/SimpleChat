<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_viewholder_chat">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/mImgAvatar"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:padding="@dimen/_8sdp"
        android:src="@drawable/ic_avatar_default"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/mImgAvatar"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mTvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User 1" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/mtvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good" />
    </LinearLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/mImgButtonCallVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_5sdp"
        android:background="@android:color/transparent"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_videocam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/mImgButtonCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/ic_call"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mImgButtonCallVideo"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>